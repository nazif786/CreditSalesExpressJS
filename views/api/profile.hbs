<body>
  {{!-- {{>navbar}} --}}
  {{!-- {{>sidebar}} --}}
  <div class="contain">
    <div class="container-fluid">
      {{>banner}}
    </div>
    <div class="main">
      <div class="leftybar">
        {{>sidebar}}
      </div>
      <div class="righty">
        <div class="maintop">
          {{>maintop}}
        </div>

        <div class="contents">
          <div class="formtitle">
            <h2> User Profile </h2>
          </div>


         
      
 
          <div class="mainform">
            <div class="addemployee">
              <div class="welcomMsg alert alert-info">
                <b>welcome {{user.user_name}}!</b> <br>you can change your password here. if you want to change your other information please contact your admin. thanks
              </div>
              <form action="/api/profileInfo" method="post" class="" id="addEmployee">
                <table style="width:100%; ">
                  <tr>
                    <th style="width:30%;"> </th>
                    <th> </th>
                  </tr>
                  <tr>
                    <td>
                      <div class="">
                        <label for="user_id"> User ID: </label>
                      </div>
                    </td>
                    <td>
                      <div class="txt_field">
                        <input type="text" placeholder="" name="user_id" value="{{user.user_id}}" readonly>
                        <label for=""> </label>
                      </div>
                    </td>
                  </tr>

                  <tr>
                    <td>
                      <div class="">
                        <label for=""> User Name: </label>
                      </div>
                    </td>
                    <td>
                      <div class="txt_field">
                        <input type="text" name="uname" placeholder="user Name" value="{{user.user_name}}" readonly>
                        <label for=""> </label>
                      </div>
                    </td>
                  </tr>

                  <tr>
                    <td>
                      <div class="">
                        <label for=""> Current Password: </label>
                      </div>
                    </td>
                    <td>
                      <div class="txt_field">
                        <input type="text" name="currentPassword" placeholder="password">
                        <label for=""> </label>
                      </div>
                    </td>
                  </tr>

                   <tr>
                    <td>
                      <div class="">
                        <label for=""> New Password: </label>
                      </div>
                    </td>
                    <td>
                      <div class="txt_field">
                        <input type="text" name="Password" placeholder="password">
                        <label for=""> </label>
                      </div>
                    </td>
                  </tr>

                   <tr>
                    <td>
                      <div class="">
                        <label for=""> Confirm New Password: </label>
                      </div>
                    </td>
                    <td>
                      <div class="txt_field">
                        <input type="text" name="cpassword" placeholder="password">
                        <label for=""> </label>
                      </div>
                    </td>
                  </tr>

                  <td>...</td>
                  <td></td>
                  </tr>
                  <tr>
                    <td colspan="2" class="btns">
                      <input type="submit" value="Change Password" id="">
                      <span></span>
                    </td>
                  </tr>

                </table>
              </form>
              <span></span>

            </div>
          </div>



        </div>
        
        
      </div>
      {{!-- main contents here --}}

    </div>

  </div>
  {{>footer}}

